[Unit]
Description=Shadowsocks LegendSock Server
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/shadowsocks-legendsock
ExecStart=/opt/shadowsocks-legendsock/shadowsocks-legendsock -noderate 1 -dbhost localhost -dbuser sspanel -dbpass sspanel -dbname sspanel
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target